<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_card_pet">

    <ImageView
        android:background="@drawable/custom_image_pet_card"
        android:layout_gravity="center"
        android:id="@+id/imagePetCard"
        android:layout_width="130dp"
        android:layout_height="100dp" />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/namePetCard"
        android:gravity="center"

        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:text="Pastor Aleman"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/locationPetCard"
        android:gravity="center"

        android:layout_width="100dp"
        android:layout_height="30dp"
android:textSize="12dp"
        android:text="wwwwwww"/>

</LinearLayout>