<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetail">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteBlue">
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="350dp"
        android:background="@drawable/detail_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/namePet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Maine Coon Cat"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="35dp"
                    android:textColor="@color/colorBlack">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorBlack">

                    </ImageView>
                    <TextView
                        android:id="@+id/location"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="California, Walk Suite">

                    </TextView>
                    <TextView
                        android:id="@+id/distance"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="2.5km">

                    </TextView>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorBlack">

                    </ImageView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="29dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <LinearLayout
                    android:background="@drawable/custom_buttom_detail_pet"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="4 months"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Age"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/custom_buttom_detail_pet"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">

                    <TextView
                        android:id="@+id/detailBreed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pastor aleman"
                        android:textAlignment="center"
                        android:layout_marginTop="13dp"
                        android:textSize="16dp"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Breed"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>